{
    "name": "forepath/obms-paymentgateway-paypal",
    "type": "obms-paymentgateway",
    "description": "The OBMS PayPal payment gateway.",
    "keywords": ["obms", "open business management software"],
    "license": "Apache-2.0",
    "homepage": "https://forepath.io",
    "support": {
        "docs": "https://forepath.io/docs/obms",
        "email": "support@forepath.io",
        "issues": "https://github.com/forepath/obms-paymentgateway-paypal/issues",
        "source": "https://github.com/forepath/obms-paymentgateway-paypal"
    },
    "extra": {
        "dir": "PayPal"
    },
    "require": {
        "php": "^8.2",
        "forepath/obms-composer-installer": "^1.0",
        "forepath/obms-module-sdk": "^1.0"
    },
    "require-dev": {
        "laravel/pint": "^1.13",
        "phpstan/phpstan": "^1.10"
    },
    "autoload": {
        "psr-4": {
            "OBMS\\PaymentGateways\\PayPal\\": "src/"
        }
    },
    "config": {
        "allow-plugins": {
            "composer/installers": true,
            "forepath/obms-composer-installer": true,
            "php-http/discovery": true
        }
    }
}
